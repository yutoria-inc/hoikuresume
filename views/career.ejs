      function toWareki(ym) {
        if (!ym) return "";
        const [yStr, mStr] = ym.split("-");
        const y = parseInt(yStr, 10);
        const m = parseInt(mStr, 10);

        if (!y || !m) return "";

        if (y >= 2019) {
          const n = y - 2018;
          return `令和${n === 1 ? "元" : n}年${m}月`;
        }
        if (y >= 1989) {
          const n = y - 1988;
          return `平成${n === 1 ? "元" : n}年${m}月`;
        }
        return `${y}年${m}月`;
      }

