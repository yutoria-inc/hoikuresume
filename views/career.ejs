      }

      function isSafari() {
        const ua = navigator.userAgent.toLowerCase();
        const isSafariLike =
          ua.includes("safari") &&
          !ua.includes("chrome") &&
          !ua.includes("crios") &&
          !ua.includes("android") &&
          !ua.includes("edg");
        return isSafariLike;
      }

      // “Apple Safari系”として扱う（iOSは必須、macOS Safariも含める）
      function isAppleSafari() {
        return isIOS() || isSafari();
